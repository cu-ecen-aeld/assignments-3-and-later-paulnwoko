#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <stdbool.h>

#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <arpa/inet.h>

#include <signal.h>
#include <errno.h>
#include <sys/syslog.h>

#include <unistd.h>

#define PORT 9000
#define LISTEN_BACKLOG 10
#define FILE_PATH "/var/tmp/aesdsocketdata"

int sfd = -1, cfd = -1;
volatile sig_atomic_t quit_requested = 0;

void signal_handler(int sig) {
    quit_requested = 1;
}

void shutdown_server_and_clean_up() {
    syslog(LOG_INFO, "Caught signal, exiting");

    if (cfd != -1) close(cfd);
    if (sfd != -1) close(sfd);

    if (unlink(FILE_PATH) == 0) {
        printf("Deleted %s\n", FILE_PATH);
    }

    closelog();
    exit(0);
}

int main(void) {
    struct sockaddr_in server_addr, client_addr;
    socklen_t client_len = sizeof(client_addr);
    char recv_buffer[4096]; // receive buffer
    char packet_buffer[1024]; // store one packet
    size_t packet_pos = 0;

    openlog("aesdsocket", LOG_PID | LOG_CONS, LOG_USER);
    syslog(LOG_INFO, "Starting TCP server on port %d", PORT);

    // Register signal handlers
    struct sigaction sa;
    sa.sa_handler = signal_handler;
    sigemptyset(&sa.sa_mask);
    sa.sa_flags = 0; // do not use SA_RESTART
    sigaction(SIGINT, &sa, NULL);
    sigaction(SIGTERM, &sa, NULL);

    // Create socket
    sfd = socket(AF_INET, SOCK_STREAM, 0);
    if (sfd < 0) { perror("socket"); return -1; }

    int opt = 1;
    if (setsockopt(sfd, SOL_SOCKET, SO_REUSEADDR, &opt, sizeof(opt)) < 0) {
        perror("setsockopt"); close(sfd); return -1;
    }

    // Bind
    memset(&server_addr, 0, sizeof(server_addr));
    server_addr.sin_family = AF_INET;
    server_addr.sin_addr.s_addr = INADDR_ANY;
    server_addr.sin_port = htons(PORT);

    if (bind(sfd, (struct sockaddr *)&server_addr, sizeof(server_addr)) < 0) {
        perror("bind"); close(sfd); return -1;
    }

    if (listen(sfd, LISTEN_BACKLOG) < 0) {
        perror("listen"); close(sfd); return -1;
    }

    while (!quit_requested) {
        cfd = accept(sfd, (struct sockaddr *)&client_addr, &client_len);
        if (cfd < 0) {
            if (errno == EINTR && quit_requested) break;
            perror("accept"); continue;
        }

        char *client_ip = inet_ntoa(client_addr.sin_addr);
        int client_port = ntohs(client_addr.sin_port);
        syslog(LOG_INFO, "Accepted connection from %s:%d", client_ip, client_port);

        packet_pos = 0;

        while (!quit_requested) {
            ssize_t bytes_rcv = recv(cfd, recv_buffer, sizeof(recv_buffer), 0);

            if (bytes_rcv < 0) {
                if (errno == EINTR && quit_requested) break;
                perror("recv"); break;
            }
            else if (bytes_rcv == 0) {
                syslog(LOG_INFO, "Closed connection from %s:%d", client_ip, client_port);
                break;
            }

            // Process received data
            for (ssize_t i = 0; i < bytes_rcv; i++) {
                packet_buffer[packet_pos++] = recv_buffer[i];

                if (recv_buffer[i] == '\n') {
                    // Write complete packet to file
                    FILE *fd = fopen(FILE_PATH, "a+");
                    if (!fd) { perror("fopen"); packet_pos = 0; continue; }

                    fwrite(packet_buffer, 1, packet_pos, fd);
                    fflush(fd);

                    packet_pos = 0;

                    // Send back entire file
                    fseek(fd, 0, SEEK_SET);
                    char send_buf[1024];
                    size_t n;
                    while ((n = fread(send_buf, 1, sizeof(send_buf), fd)) > 0) {
                        send(cfd, send_buf, n, 0);
                    }
                    fclose(fd);
                }
            }
        }

        close(cfd);
        cfd = -1;
    }

    shutdown_server_and_clean_up();
    return 0;
}
